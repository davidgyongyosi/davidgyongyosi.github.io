---
// ProjectCard.astro
export interface Props {
  title: string;
  description: string;
  link: string;
  linkText: string;
  tags: string[];
}

const { title, description, link, linkText, tags } = Astro.props;
---

<div
  class="project-card border-gray-500 border-2 shadow-black shadow-md flex flex-col"
>
  <div>
    <h3 class="text-2xl">{title}</h3>
    <p class="text-sm text-gray-400 pt- pb-6">{description}</p>
    <a href={link} class="button" target="_blank" rel="noreferrer noopener"
      >{linkText}() =&gt;</a
    >
    <div class="flex flex-row flex-wrap gap-2 pt-5">
      {
        tags.map((tag) => (
          <span class="border-2 border-gray-600 px-2">{tag}</span>
        ))
      }
    </div>
  </div>
</div>

<style lang="scss">
  .project-card {
    background-color: transparent;
    border-radius: 8px;
    padding: 1rem;
    color: #fff;
    width: 265px;
    transition: transform 0.3s ease-in-out;
    position: relative;
    z-index: 1;

    &:hover {
      transform: scale(1.1);
      z-index: 10;
    }
  }

  h3 {
    color: #8957f6;
  }
  .button {
    background-color: transparent;
    border: 1px solid #8957f6;
    color: #8957f6;
    padding: 0.5rem 1rem;
    text-decoration: none;
    transition: all 0.2s ease-in-out;
    display: inline-block;

    &:hover {
      background-color: #8957f6;
      color: black;
    }
  }
</style>
