---
import Button from "../Button.astro";

export interface Props {
  title: string;
  subtitle: string;
  email: string;
  statusText?: string;
}

const { title, subtitle, email, statusText = "Currently working on a new" } = Astro.props;
---

<section id="hero" class="pt-8 animate-section">
  <div class="animate-stagger">
    <div class="animate-fade-up">
      <div class="hero-content">
        <div class="hero-text">
          <h1 set:html={title}></h1>
          <p class="text-gray-400">
            {subtitle}
          </p>
        </div>
        <div class="hero-action">
          <Button href={`mailto:${email}`} variant="compact">
            Contact_me() =&gt;
          </Button>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero-content {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    align-items: flex-start;
    justify-content: space-between;
  }

  .hero-text {
    flex: 1;
  }

  .hero-action {
    flex-shrink: 0;
    align-self: flex-end;
  }

  @media (max-width: 768px) {
    .hero-content {
      flex-direction: column;
      align-items: flex-start;
      gap: 1.5rem;
    }

    .hero-action {
      align-self: flex-start;
    }
  }
</style>
