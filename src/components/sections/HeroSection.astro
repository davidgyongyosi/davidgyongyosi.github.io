---
import { Image } from "astro:assets";
import heroImage from "../../assets/hero.png";
import HackedText from "../HackedText.astro";

export interface Props {
  title: string;
  subtitle: string;
  email: string;
  statusText?: string;
}

const { title, subtitle, email, statusText = "Currently working on a new" } = Astro.props;
---

<section id="hero" class="pt-8">
  <div class="flex flex-col items-center sm:justify-between pt-8 gap-3 sm:flex-row">
    <div class="flex flex-col gap-6">
      <div>
        <h1 class="text-lg md:text-3xl" set:html={title}></h1>
        <p class="text-lg text-gray-400">
          {subtitle}
        </p>
      </div>
      <a href={`mailto:${email}`} class="btn">
        <span>Contact_me() =&gt;</span>
      </a>
    </div>
    <div class="sm:pr-10">
      <Image
        src={heroImage}
        alt="hero"
        class="border-b-2 border-gray-500"
        width={300}
        height={300}
      />
      <div>
        <HackedText text="project" prefix={statusText + " "} />
      </div>
    </div>
  </div>
</section>
