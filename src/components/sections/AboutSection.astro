---
import SectionHeader from "../SectionHeader.astro";
import Button from "../Button.astro";

export interface Props {
  intro: string;
  paragraphs: string[];
  conclusion: string;
  ctaText?: string;
  ctaLink?: string;
}

const { intro, paragraphs, conclusion, ctaText, ctaLink } = Astro.props;
---

<section id="about-me" class="animate-section">
  <div class="p-3 sm:p-8">
    <div class="animate-fade-up">
      <SectionHeader title="about-me" />
    </div>
    <div class="p-4 sm:p-16 text-sm sm:text-lg animate-stagger">
      <p class="pb-4 animate-fade-up" set:html={intro}></p>
      {paragraphs.map((paragraph, index) => (
        <p class="pb-4 animate-fade-up" style={`animation-delay: ${index * 0.1}s`}>{paragraph}</p>
      ))}
      <p class="pb-12 animate-fade-up" style="animation-delay: 0.3s" set:html={conclusion}></p>
      {ctaText && ctaLink && (
        <div class="animate-scale" style="animation-delay: 0.4s">
          <Button href={ctaLink} variant="primary">
            {ctaText} =&gt;
          </Button>
        </div>
      )}
    </div>
  </div>
</section>
