---
import MainLayout from "../layouts/MainLayout.astro";

import LinkedinIcon from "../assets/icons/linkedin.svg";
import envelope from "../assets/icons/envelope.svg";
---

<MainLayout title="Contact">
  <div class="p-24">
    <h1 class="text-2xl pb-6"><span class="heading-prefix">/</span>contacts</h1>
    <div class="flex flex-row">
      <div class="w-3/4">
        <p class="pb-4 w-3/4">Who am I?</p>
        <p class="text-wrap w-3/4">
          I’m interested in opportunities to work together and learn. I am
          interested in freelance work aswell. However, if you have other
          request or question, don’t hesitate to contact me
        </p>
      </div>
      <div class="border-slate-100 border-2 p-3 basis-36">
        <h2 class="pb-4">Message me here</h2>
        <p>
          <i class="fa-brands fa-linkedin fa-icons"></i>linkedin profile url
        </p>
        <p>
          <i class="fas fa-envelope fa-icons"></i>david.gyongyosi&#64;majin.dev
        </p>
      </div>
    </div>

    <div class="flex justify-center">
        <h1 class="text-3xl"> Contact form</h1>
    </div>

    <div class="pt-6 pl-4">
      <h1 class="text-xl pb-6">
        <span class="heading-prefix">/</span>other-media
      </h1>
      <ul>
        <li>
          <p>
            <i class="fa-brands fa-github fa-icons"></i>github.com/davidgyongyosi
          </p>
        </li>
        <li>
          <p>
            <i class="fas fa-envelope fa-icons"
            ></i>david.gyongyosi&#64;majin.dev
          </p>
        </li>
        <li></li>
      </ul>
    </div>
  </div>
</MainLayout>
