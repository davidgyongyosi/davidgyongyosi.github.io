---
import MainLayout from "../layouts/MainLayout.astro";
import HeroSection from "../components/sections/HeroSection.astro";
import ProjectsSection from "../components/sections/ProjectsSection.astro";
import SkillsSection from "../components/sections/SkillsSection.astro";
import AboutSection from "../components/sections/AboutSection.astro";
import Quote from "../components/Quote.astro";
import IDETerminal from "../components/IDETerminal.astro";
import { getFeaturedProjects } from "../data/projects";
import { skillsData } from "../data/skills";

// Get featured projects for homepage
const featuredProjects = getFeaturedProjects();
---

<MainLayout title="Home">
  <HeroSection
    title="I am a <span>dedicated</span> web developer."
    subtitle="Creating modern, responsive web experiences with clean code and thoughtful design."
    email="david.gyongyosi@majin.dev"
  />

  <div class="hero-quote-container">
    <div class="hero-image-side">
      <img src="/src/assets/hero-memoji.png" alt="Hero" class="hero-image-side-content" />
    </div>
    <div class="quote-content">
      <Quote
        text="One of my most productive days was throwing away 1000 lines of code."
        author="Ken Thompson"
      />
    </div>
  </div>

  <div class="section-spacing">
    <IDETerminal skills={skillsData} />
  </div>

  <ProjectsSection projects={featuredProjects} showViewAll={true} />

  <AboutSection
    intro="Hello, i'm <span>David!</span> üëãüèº"
    paragraphs={[
      "I'm a graduated full-stack software engineer based in Hungary. I can develop responsive websites from scratch and raise them into modern user-friendly web experiences. Alongside that, I am able to create a full-stack application with the latest technologies and frameworks.",
      "I have a passion for creating websites and apps. I love to learn new technologies and frameworks, and I am always looking for ways to improve my skills."
    ]}
    conclusion="These skills are what make me <span>who I am.</span>"
    ctaText="Read_more()"
    ctaLink="/about/"
  />
</MainLayout>

<style>
  .section-spacing {
    margin: 3rem 0;
  }

  .hero-quote-container {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
    margin: 2rem 0;
    padding: 0 1rem;
  }

  .hero-image-side {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    margin-right: 0.5rem;
  }

  .hero-image-side-content {
    width: auto;
    height: auto;
    max-height: 280px;
    max-width: 320px;
    object-fit: contain;
  }

  .quote-content {
    flex: 1;
    min-width: 0;
    max-width: 500px;
  }

  /* Tablet breakpoint */
  @media (max-width: 768px) {
    .hero-quote-container {
      gap: 2rem;
      flex-direction: column;
    }

    .hero-image-side {
      justify-content: center;
      margin-right: 0;
    }

    .hero-image-side-content {
      max-height: 240px;
      max-width: 280px;
    }

    .quote-content {
      width: 100%;
    }
  }

  /* Mobile breakpoint */
  @media (max-width: 640px) {
    .hero-quote-container {
      gap: 1.5rem;
      margin: 1.5rem 0;
    }

    .hero-image-side-content {
      max-height: 200px;
      max-width: 240px;
    }

    .quote-content {
      width: 100%;
    }
  }
</style>
