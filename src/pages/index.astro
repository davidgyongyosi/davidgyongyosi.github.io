---
import MainLayout from "../layouts/MainLayout.astro";
import HeroSection from "../components/sections/HeroSection.astro";
import ProjectsSection from "../components/sections/ProjectsSection.astro";
import SkillsSection from "../components/sections/SkillsSection.astro";
import AboutSection from "../components/sections/AboutSection.astro";
import Quote from "../components/Quote.astro";
import { getFeaturedProjects } from "../data/projects";
import { skillsData } from "../data/skills";

// Get featured projects for homepage
const featuredProjects = getFeaturedProjects();
---

<MainLayout title="Home">
  <HeroSection
    title="I am an <span>enthusiastic</span> web developer."
    subtitle="Currently working as a Frontend Developer."
    email="david.gyongyosi@majin.dev"
  />

  <Quote
    text="One of my most productive days was throwing away 1000 lines of code."
    author="Ken Thompson"
  />

  <ProjectsSection projects={featuredProjects} showViewAll={true} />

  <SkillsSection skills={skillsData} />

  <AboutSection
    intro="Hello, i'm <span>David!</span> üëãüèº"
    paragraphs={[
      "I'm a graduated full-stack software engineer based in Hungary. I can develop responsive websites from scratch and raise them into modern user-friendly web experiences. Alongside that, I am able to create a full-stack application with the latest technologies and frameworks.",
      "I have a passion for creating websites and apps. I love to learn new technologies and frameworks, and I am always looking for ways to improve my skills."
    ]}
    conclusion="These skills are what make me <span>who I am.</span>"
    ctaText="Read_more()"
    ctaLink="/about/"
  />
</MainLayout>
